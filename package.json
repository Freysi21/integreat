{
  "name": "integreat",
  "version": "0.3.1",
  "description": "Node.js integration layer",
  "author": "Kjell-Morten Bratsberg Thorsen <post@kjellmorten.no> (http://kjellmorten.no/)",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "test": "npm run lint && NODE_ENV=test nyc --reporter=text-summary ava",
    "dev": "NODE_ENV=test ava --watch",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "nyc:report": "nyc report",
    "lint": "standard"
  },
  "ava": {
    "files": [
      "lib/**/*-test.js",
      "tests/**/*-test.js"
    ],
    "source": [
      "./index.js",
      "lib/**/!(*-test).js"
    ],
    "babel": {
      "presets": [
        ["env", {
          "targets": {
            "node": "8.4"
          }
        }]
      ]
    }

  },
  "nyc": {
    "exclude": [
      "**/*-test.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjellmorten/integreat.git"
  },
  "bugs": {
    "url": "https://github.com/kjellmorten/integreat/issues"
  },
  "homepage": "https://github.com/kjellmorten/integreat#readme",
  "engines": {
    "node": "8.4.x",
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "debug": "^2.6.9",
    "great-uri-template": "^0.1.2",
    "later": "^1.2.0",
    "request": "^2.82.0",
    "request-promise-native": "^1.0.5",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-preset-env": "^1.6.0",
    "coveralls": "^2.13.1",
    "dotenv": "^4.0.0",
    "nock": "^9.0.20",
    "nyc": "^11.2.1",
    "sinon": "^2.4.1",
    "standard": "^9.0.2"
  }
}
