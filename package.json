{
  "name": "integreat",
  "version": "0.3.0",
  "description": "Node.js integration layer",
  "author": "Kjell-Morten Bratsberg Thorsen <post@kjellmorten.no> (http://kjellmorten.no/)",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "test": "npm run lint && NODE_ENV=test nyc --reporter=text-summary ava",
    "dev": "NODE_ENV=test ava --watch",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "nyc:report": "nyc report",
    "lint": "standard"
  },
  "ava": {
    "files": [
      "lib/**/*-test.js",
      "tests/**/*-test.js"
    ],
    "source": [
      "lib/**/!(*-test).js"
    ],
    "babel": {
      "presets": [
        "babel-preset-node7"
      ]
    }
  },
  "nyc": {
    "exclude": [
      "**/*-test.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kjellmorten/integreat.git"
  },
  "bugs": {
    "url": "https://github.com/kjellmorten/integreat/issues"
  },
  "homepage": "https://github.com/kjellmorten/integreat#readme",
  "engines": {
    "node": "7.7.x",
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "debug": "^2.6.0",
    "later": "^1.2.0",
    "request": "^2.79.0",
    "request-promise-native": "^1.0.3",
    "urijs": "^1.18.10",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-preset-node7": "^1.4.0",
    "coveralls": "^2.13.1",
    "dotenv": "^4.0.0",
    "nock": "^9.0.14",
    "nyc": "^11.0.3",
    "sinon": "^2.3.8",
    "standard": "^9.0.2"
  }
}
